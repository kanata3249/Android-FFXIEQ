<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_height="fill_parent" android:layout_width="wrap_content" android:orientation="horizontal">
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/tableLayout1" android:layout_width="255dip" android:layout_height="wrap_content">
    <TableLayout android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/tableLayout" android:stretchColumns="0">
	    <TableRow android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/TableRow">
	        <com.github.kanata3249.ffxieq.android.CharacterSelectorView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/CharacterSelector" android:textColor="@android:color/primary_text_light" android:prompt="@string/CharacterSelectorDropDownTitle"></com.github.kanata3249.ffxieq.android.CharacterSelectorView>
	        <Button android:id="@+id/Save" android:text="@string/Save" android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	    </TableRow>
	    <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content" android:id="@+id/TableRow">
	        <com.github.kanata3249.ffxieq.android.CharacterSelectorView android:layout_height="wrap_content" android:layout_width="fill_parent" android:id="@+id/CharacterSelectorToCompare" android:textColor="@android:color/primary_text_light" android:prompt="@string/CharacterSelectorDropDownTitle"></com.github.kanata3249.ffxieq.android.CharacterSelectorView>
	        <CheckBox android:id="@+id/Compare" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/Compare"></CheckBox>
	    </TableRow>
    </TableLayout>
    <TableLayout android:layout_height="wrap_content" android:id="@+id/tableLayout2" android:layout_width="wrap_content">
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="wrap_content">
            <Spinner android:entries="@array/Jobs" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Job"></Spinner>
            <EditText android:layout_height="wrap_content" android:text="EditText" android:id="@+id/JobLevel" android:layout_width="wrap_content" android:inputType="numberDecimal"></EditText>
            <Spinner android:entries="@array/Races" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/Race"></Spinner>
        </TableRow>
        <TableRow android:layout_height="wrap_content" android:id="@+id/tableRow1" android:layout_width="wrap_content">
            <Spinner android:entries="@array/Jobs" android:layout_height="wrap_content" android:layout_width="wrap_content" android:id="@+id/SubJob"></Spinner>
            <EditText android:layout_height="wrap_content" android:text="EditText" android:id="@+id/SubJobLevel" android:layout_width="wrap_content" android:inputType="numberDecimal"></EditText>
        </TableRow>
    </TableLayout>
    <RelativeLayout android:layout_height="wrap_content" android:id="@+id/relativeLayout1" android:layout_width="wrap_content">
        <CheckBox android:id="@+id/InAbyssea" android:layout_width="wrap_content" android:text="@string/InAbyssea" android:layout_height="wrap_content"></CheckBox>
        <Spinner android:entries="@array/AbyssiteOfMeritEntries" android:layout_height="wrap_content" android:layout_toRightOf="@+id/AbyssiteOfFurtherance" android:prompt="@string/AbyssiteOfMeritPrompt" android:id="@+id/AbyssiteOfMerit" android:layout_width="wrap_content">
        </Spinner>
        <Spinner android:entries="@array/AbyssiteOfFurtheranceEntries" android:layout_height="wrap_content" android:layout_toRightOf="@+id/InAbyssea" android:prompt="@string/AbyssiteOfFurtherancePrompt" android:id="@+id/AbyssiteOfFurtherance" android:layout_width="wrap_content">
        </Spinner>
    </RelativeLayout>
</TableLayout>
<LinearLayout android:layout_width="wrap_content" android:layout_height="fill_parent" android:id="@+id/linearLayout1" android:orientation="vertical">
    <com.github.kanata3249.ffxieq.android.AtmaSetView android:layout_height="wrap_content" android:id="@+id/Atmas" android:layout_width="fill_parent"></com.github.kanata3249.ffxieq.android.AtmaSetView>
    <com.github.kanata3249.ffxieq.android.EquipmentSetView android:scrollbars="vertical" android:layout_height="fill_parent" android:id="@+id/Equipments" android:layout_width="fill_parent"></com.github.kanata3249.ffxieq.android.EquipmentSetView>
</LinearLayout>
</LinearLayout>